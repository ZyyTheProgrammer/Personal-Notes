def sliding_window(arr, window_size):
    n = len(arr)
    if n < window_size:
        return "Window size is larger than array size"
    
    result = []
    for i in range(n - window_size + 1):
        window = arr[i:i+window_size]  # Extract the current window
        result.append(window)  # Store or process the window as needed
    
    return result

# Example usage:
arr = [1, 2, 3, 4, 5, 6, 7, 8, 9]
window_size = 3
print(sliding_window(arr, window_size))
